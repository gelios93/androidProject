<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/member_long_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="@drawable/item_background"
    android:backgroundTint="@color/main_dark"
    android:layout_marginTop="5dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/member_long_card"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        app:cardBackgroundColor="@color/colorAncient"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/red_palette"
        app:strokeWidth="3dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent">

            <ImageView
                android:id="@+id/member_long_avatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <ImageView
        android:id="@+id/member_long_friend"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="-8dp"
        android:layout_marginBottom="-8dp"
        app:layout_constraintBottom_toBottomOf="@+id/member_long_card"
        app:layout_constraintEnd_toEndOf="@+id/member_long_card"
        app:srcCompat="@drawable/friend" />

    <TextView
        android:id="@+id/member_long_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="TextView"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/member_long_card"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/member_long_you"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="YOU"
        android:textColor="#80FFFFFF"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/member_long_name"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/member_long_addButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/member_long_deleteButton"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/add_friend"
        android:scaleType="centerCrop"
        android:padding="0dp"/>

    <ImageButton
        android:id="@+id/member_long_deleteButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cross"
        android:scaleType="centerCrop"
        android:padding="0dp"/>

    <ImageView
        android:id="@+id/member_long_crown"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/member_long_addButton"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/crown" />



</androidx.constraintlayout.widget.ConstraintLayout>